<?xml version="1.0" encoding="utf-8"?>
<install version="2.5"
         type="plugin"
         group="system"
         method="upgrade">
	<name>System - Feed Control</name>
	<creationDate>June 20, 2013</creationDate>
	<author>Matt Thomas</author>
	<authorEmail>matt@betweenbrain.com</authorEmail>
	<authorUrl>http://www.betweenbrain.com</authorUrl>
	<license>GNU General Public License version 2 or later</license>
	<copyright>Copyright (C) 2013 betweenbrain llc. All rights reserved.</copyright>
	<version>0.1</version>
	<description>PLG_FEED_CONTROL_DESC</description>
	<files>
		<filename plugin="feedcontrol">feedcontrol.php</filename>
		<filename>elements/menuitems.php</filename>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_feedcontrol.ini</language>
	</languages>

	<params addpath="/plugins/system/elements">
		<param name="permanent" type="radio" default="1" label="PLG_FEED_CONTROL_PERMANENT_LABEL" description="PLG_FEED_CONTROL_PERMANENT_DESC">
		  <option value="0">No</option>
		  <option value="1">Yes</option>
		</param>
		<param name="exclusions"
		       type="menuitems"
		       label="PLG_FEED_CONTROL_EXCLUSIONS_LABEL"
		       description="PLG_FEED_CONTROL_EXCLUSIONS_DESC"/>
	</params>

</install>